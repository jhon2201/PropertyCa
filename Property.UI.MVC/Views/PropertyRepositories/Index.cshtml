@model IEnumerable<Property.Domain.Models.PropertyRepository>

@{
    ViewData["Title"] = "Propiedades";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New Property</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.codeInternal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idOwner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codeInternal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idOwner)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idProperty">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idProperty">Details</a> |
                @*<a asp-action="Delete" asp-route-id="@item.idProperty">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
